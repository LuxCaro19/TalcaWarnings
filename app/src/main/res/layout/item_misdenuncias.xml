<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/item_denuncia_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_item"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:text="Denuncia"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/item_denuncia_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_toRightOf="@id/item_denuncia_circle"/>
    
    <TextView
        android:id="@+id/item_denuncia_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:textColor="#000000"
        android:layout_below="@id/item_denuncia_title"
        android:layout_toRightOf="@id/item_denuncia_circle"
        android:textSize="18dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/item_denuncia_circle"
        android:background="#000000"/>
</RelativeLayout>