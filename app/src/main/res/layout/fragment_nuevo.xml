<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.NuevoFragment">


    <TextView

        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Â¿Quieres hacer una denuncia?"
        android:gravity="center"

        />


    <EditText

        android:id="@+id/nuevo_input_titulo"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titulo"

        />

    <EditText

        android:id="@+id/nuevo_input_direccion"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Direccion"

        />


    <Button
        android:id="@+id/nuevo_bt_crearDenuncia"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denunciar"

        />




</LinearLayout>